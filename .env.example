# Authentication Configuration
# Available methods: 'wordpress', 'none' (or null to disable)
AUTH_METHOD=wordpress

# WordPress authentication settings (when AUTH_METHOD=wordpress)
WP_SITE_URL=https://example.com
WP_REQUIRED_ROLE=bokit_manager

# Database Configuration
DB_CONNECTION=sqlite
# DB_DATABASE=  # Leave empty to use default: storage/database/default/database.sqlite

# Session Configuration
SESSION_DRIVER=database

# Auto-sync Configuration
# Interval in seconds between automatic syncs (default: 3600 = 1 hour)
# Examples: 1800 (30min), 3600 (1h), 7200 (2h), 21600 (6h)
SYNC_INTERVAL=3600

# Navigation Configuration
# Maximum months in the future users can navigate (default: 24 = 2 years)
# No limit for past navigation
MAX_FUTURE_MONTHS=24
